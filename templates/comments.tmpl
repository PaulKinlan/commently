<div id="comments">
  {% for reply in replies.data.items %}
  <div class="buzz-comment">
    <img src="{{reply.actor.thumbnailUrl}}" class="buzz-actor">
    <div class="buzz-name"><a href="{{reply.actor.name}}">{{reply.actor.profileUrl}}</a></div>
    <div class="buzz-content">{{reply.content}}</div>
    <br>
  </div>
  {% endfor %}
</div>